<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.wsg.xsybbs.view.DefaultTopBar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/newnote_title"
        android:layout_width="match_parent"

        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="亲，请输入标题~" />

    <EditText
        android:id="@+id/newnote_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="center"
        android:hint="亲，请输入内容~" />

    <TextView
        android:layout_width="match_parent"
        android:text="@string/please_choose_note_type"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/typeRv"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>


    <Button
        android:id="@+id/newnote_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/button_bg"
        android:text="发布" />


</LinearLayout>