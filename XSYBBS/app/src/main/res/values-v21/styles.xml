<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="SplashActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--将顶部状态栏设置为透明，并将界面内容布局上边界上提至状态栏顶部-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--如果有底部虚拟导航栏，则将底部虚拟导航栏设置为透明，并将界面内容布局下边界下沉至虚拟导航栏底部-->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@mipmap/splash_bg</item>
    </style>

</resources>